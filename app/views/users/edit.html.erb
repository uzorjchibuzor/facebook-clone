<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h2>Make Changes To Your Profile</h2>

<%= form_for(@user, url: registration_path(@user), html: { method: :put }) do |f| %>

    <div class="form-group form-group-lg">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "", class:"form-control" %>
  </div>

  <div class="form-group form-group-lg">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "", class:"form-control"%>
  </div>

  <div class="form-group form-group-lg">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>


  <% if @user.confirmed_at == nil || @user.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= @user.email %></div>
  <% end %>

  <div class="form-group form-group-lg">
    <%= f.label :date_of_birth %><br />
    <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "", class:"form-control" %>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :gender %><br />
    <%= f.text_field :gender, autofocus: true, autocomplete: "", class:"form-control" %>
  </div>

  <div class="form-group form-group-lg">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group form-group-lg">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
  </div>

  <div class="form-group form-group-lg">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-success btn-lg update-button" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back %>
  </div>
</div>

